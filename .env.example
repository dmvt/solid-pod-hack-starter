# URL of the Solid Identity Provider used for auth flows
SOLID_IDENTITY_PROVIDER=https://login.inrupt.com

# Local Solid Pod base URL (the `solid-pod` service in Docker)
LOCAL_SOLID_POD=http://solid-pod:3000

# Port the dev server runs on (mirrors docker-compose)
DEV_PORT=7000

# Node environment (development, production, test)
NODE_ENV=development

# Base URL for the application
BASE_URL=http://localhost:7000

# Optional: Debugging flags (true/false)
DEBUG_AUTH=false
DEBUG_POD_OPERATIONS=false

# Optional: Timeout duration for API requests in milliseconds
API_TIMEOUT=5000

# Optional: Enable strict mode for solid-client (true/false)
STRICT_MODE=false

# Optional: Default language for the application
DEFAULT_LANGUAGE=en